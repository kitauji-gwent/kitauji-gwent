<div class="bbm-modal__topbar">
  <h3 class="bbm-modal__title">用户信息</h3>
</div>
<div class="bbm-modal__section small-cards-modal">
  <form class="form-horizontal">
    <div class="form-group">
      <label for="username" class="col-sm-2 control-label">{{i18n "username"}}</label>
      <div class="col-sm-10">
        <input type="text" class="form-control" id="username" placeholder="{{i18n "username_validation"}}" value="{{userModel.username}}" readonly disabled>
      </div>
    </div>
    <div class="form-group">
      <label for="bandName" class="col-sm-2 control-label">{{i18n "band_name"}}</label>
      <div class="col-sm-10">
        <input type="text" class="form-control" id="bandName" placeholder="{{i18n "band_name_hint"}}" value="{{userModel.bandName}}">
      </div>
    </div>
    <div class="form-group">
      <label for="initialDeck" class="col-sm-2 control-label">{{i18n "initial_deck"}}</label>
      <div class="col-sm-10">
        <select id="initialDeck" class="field-session">
          <option disabled value="kumiko1">{{i18n "deck_ku1"}} ({{i18n "faction_ability_kumiko1"}})</option>
          <option disabled value="kumiko1S2">{{i18n "deck_ku1S2"}} ({{i18n "faction_ability_kumiko1S2"}})</option>
          <option disabled value="kitauji">{{i18n "deck_ku2"}} ({{i18n "faction_ability_kitauji"}})</option>
        </select>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <div id="btnSave" class="btn btn-success">保存</div>
      </div>
    </div>
  </form>
</div>
